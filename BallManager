using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class BallManager : MonoBehaviour
{
    // 可読性の向上のために不要なメソッドは削除。

    void OnCollisionEnter2D(Collision2D coll)
    {
        if (coll.gameObject.tag == "OutArea")
        {
            // Findメソッドは非常に処理が重いメソッドです。できるだけ多用を避けるようにしましょう。
            // 例えば、以下のような回避方法があります。
            // メソッドでprivate gameManagerを宣言。
            // gameManagerがnullならば、Findを実行。nullではなければFindを実行しない。
            // このようにすることで、Findの回数を減らすことができます。
            GameObject gameManager = GameObject.Find("GameManager");
            gameManager.GetComponent<GameManager>().PushRetryButton();
        }

        //ボールがボックスに衝突。
        if (coll.gameObject.tag == "box")
        {
            GameObject gameManager = GameObject.Find("GameManager");
            gameManager.GetComponent<GameManager>().impact();
        }
    }

    void OnTriggerEnter2D(Collider2D other)
    {
        if (other.gameObject.tag == "ClearArea")
        {
            GameObject gameManager = GameObject.Find("GameManager");
            gameManager.GetComponent<GameManager>().StageClear();
        }
    }
}
